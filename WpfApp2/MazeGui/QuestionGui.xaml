<Page x:Class="MazeRunnerWPF.MazeGui.QuestionGui"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MazeRunnerWPF.MazeGui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestionGui">

    <Grid>
        <Button x:Name="btnSubmitAnswer" Content="Correct Answer!" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="175" Height="41" Click="btnSubmitAnswer_Click"/>
        <Button x:Name="btnSubmitBadChoice" Content="Wrong Answer!" HorizontalAlignment="Center" Margin="528,0,96,10" VerticalAlignment="Bottom" Width="176" Height="41" Click="btnSubmitBadChoice_Click"/>

    </Grid>
</Page>
