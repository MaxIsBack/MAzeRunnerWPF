<Page x:Class="MazeRunnerWPF.MazeGui.WinningGui"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MazeRunnerWPF.MazeGui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WinningGui">

    <Grid Background="Pink">
        <Label Content="You won! Congratulations!!!" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFD80000" FontSize="48"/>
        <Button Content="Explore the maze more!" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="161" Height="44" Click="Button_Click"/>
        <Label x:Name="lblScore" Content="Score: " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,128,0,0" Foreground="#FF700000" FontWeight="Bold"/>

    </Grid>
</Page>
